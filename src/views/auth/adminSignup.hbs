<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Administrators SignUp</h3>
          <p class="reminder">Remember to ask for your admin code at your local gerency</p>
        </div>
        <div class="card-body">
          <form action="/adminSignup" method="POST">
            <div class="form-group">
              <input type="type" name="fullname" placeholder="Full Name" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="adminCode" placeholder="Code of admin" class="form-control"> 
            </div>
            <div class="form-group">
              <input type="password" name="password" placeholder="Password" class="form-control">
            </div>
            <div class="form-group">
              <input type="tel" name="cellphone" placeholder="Cellphone" class="form-control">
            </div>
            <div class="form-group">
              <button class="btn btn-primary btn-block">
                SingUp
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>